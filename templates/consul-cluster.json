{
  "builders": [
    {
      "box_name"    : "7onetella/consul-cluster",
      "output_dir"  : "build/7onetella/consul-cluster",
      "communicator": "ssh",
      "source_path" : "7onetella/ubuntu-20.04",
      "provider"    : "virtualbox",
      "skip_add"    : true,
      "type"        : "vagrant"
    }
  ],
  "provisioners": [
    {
      "ansible_env_vars": [ "ANSIBLE_STDOUT_CALLBACK=debug" ],
      "extra_arguments" : [ "-v", "--extra-vars", "target=default user=vagrant ansible_os_family=Debian" ],
      "type"            : "ansible",
      "playbook_file"   : "../playbooks/consul-cluster.yml",
      "user"            : "vagrant"
    }
  ]       
}